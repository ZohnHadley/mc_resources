{
  "type": "minecraft:multi_action",
  "title": "New item section",
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "id",
      "width": 70,
      "label": "Unique ID",
      "initial": "my_new_id",
      "max_length": 16
    },
    {
      "type": "minecraft:text",
      "key": "name",
      "width": 170,
      "label": "",
      "initial": "New item section",
      "max_length": 20
    },
    {
      "type": "minecraft:text",
      "key": "color",
      "width": 100,
      "label": {
        "text": "Color"
      },
      "initial": "white"
    }
  ],
  "pause": false,
  "after_action": "none",
  "exit_action": {
    "label": {
      "text": "Close",
      "color": "red"
    }
  },
  "columns": 2,
  "actions": [
    {
      "label": "Add section",
      "width": 160,
      "action": {
        "type": "minecraft:dynamic/run_command",
        "template": "function ci:dialog/items/new_section {name:\"$(name)\",color:\"$(color)\",id:\"$(id)\"}"
      }
    }
  ]
}