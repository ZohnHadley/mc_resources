{
  "type": "minecraft:multi_action",
  "title": "Item Modifier",
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "name",
      "width": 150,
      "label": "Name",
      "initial": "my epic item",
      "max_length": 64
    },
    {
      "type": "minecraft:text",
      "key": "color",
      "width": 100,
      "label": "Color",
      "initial": "white",
      "max_length": 16
    },
    {
      "type": "minecraft:text",
      "key": "model",
      "width": 170,
      "label": "Item Model",
      "max_length": 64
    },
    {
      "type": "minecraft:single_option",
      "key": "animation",
      "width": 110,
      "label": {
        "text": "Animation",
        "color": "#ffcccc"
      },
      "label_visible": true,
      "options": [
        {
          "id": "none",
          "display": "None",
          "initial": true
        },
        {
          "id": "eat",
          "display": "Eat",
          "initial": false
        },
        {
          "id": "drink",
          "display": "Drink",
          "initial": false
        },
        {
          "id": "block",
          "display": "Block",
          "initial": false
        },
        {
          "id": "bow",
          "display": "bow",
          "initial": false
        },
        {
          "id": "trident",
          "display": "Trident",
          "initial": false
        },
        {
          "id": "spear",
          "display": "Spear",
          "initial": false
        },
        {
          "id": "crossbow",
          "display": "Crossbow",
          "initial": false
        },
        {
          "id": "spyglass",
          "display": "Spyglass",
          "initial": false
        },
        {
          "id": "toot_horn",
          "display": "Toot Horn",
          "initial": false
        },
        {
          "id": "brush",
          "display": "Brush",
          "initial": false
        },
        {
          "id": "bundle",
          "display": "Bundle",
          "initial": false
        }
      ]
    }
  ],
  "pause": false,
  "after_action": "none",
  "exit_action": {
    "label": "Exit"
  },
  "columns": 2,
  "actions": [
    {
      "label": {
        "text": "Set as consumable",
        "color": "#ffed94"
      },
      "width": 150,
      "action": {
        "type": "minecraft:dynamic/run_command",
        "template": "item modify entity @p weapon.mainhand {function:\"minecraft:set_components\",components:{\"minecraft:food\":{nutrition:0,saturation:0,can_always_eat:1b},\"minecraft:consumable\":{consume_seconds:21483482,animation:\"$(animation)\"}}}"
      }
    },
    {
      "label": {
        "text": "Copy Mainhand Item",
        "color": "#74ecb8"
      },
      "width": 130,
      "action": {
        "type": "minecraft:run_command",
        "command": "function a:copy_item"
      }
    },
    {
      "label": {
        "text": "Change item model",
        "color": "red"
      },
      "width": 125,
      "action": {
        "type": "minecraft:dynamic/run_command",
        "template": "item modify entity @p weapon.mainhand {function:\"minecraft:set_components\",components:{\"minecraft:item_model\":\"$(model)\"}}"
      }
    },
    {
      "label": {
        "text": "Change item name",
        "color": "#a3a6ff"
      },
      "width": 135,
      "action": {
        "type": "minecraft:dynamic/run_command",
        "template": "item modify entity @p weapon.mainhand {function:\"minecraft:set_components\",components:{\"minecraft:item_name\":{text:\"$(name)\",color:\"$(color)\"}}}"
      }
    },
    {
      "label": {
        "text": "Global cooldown reset",
        "color": "#74ecb8"
      },
      "width": 130,
      "action": {
        "type": "minecraft:run_command",
        "command": "function ci:reset_cds"
      }
    },
    {
      "label": {
        "text": "Add commands",
        "color": "gold"
      },
      "width": 170,
      "action": {
        "type": "minecraft:show_dialog",
        "dialog": "ci:command_item_creator"
      }
    }
  ]
}